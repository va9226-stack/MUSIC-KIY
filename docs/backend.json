{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's public profile.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "description": "The user's email."
        },
        "photoURL": {
          "type": "string",
          "description": "The URL of the user's profile photo."
        },
        "lastLogin": {
            "type": "string",
            "format": "date-time"
        }
      },
      "required": ["displayName", "email"]
    },
    "Song": {
      "title": "Song",
      "description": "A generated song.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "genre": { "type": "string" },
        "audioData": { "type": "string", "description": "base64 encoded wav" },
        "curatedInfo": {
            "type": "object",
            "properties": {
                "titleIncluded": { "type": "boolean" },
                "displayedTags": { "type": "array", "items": { "type": "string" } },
                "highlightedFeatures": { "type": "object" },
                "imageIncluded": { "type": "boolean" }
            }
        },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["genre", "audioData", "curatedInfo", "createdAt"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores user profile information."
    },
    "/users/{userId}/songs/{songId}": {
      "schema": { "$ref": "#/entities/Song" },
      "description": "Stores songs generated by a user."
    }
  }
}
